<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent2">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:foregroundGravity="center"
                app:lottie_autoPlay="true"
                app:lottie_fileName="orderplaced.json" />

            <TextView
                style="@style/fonts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Your Order has been Placed Succesfully. \n Here is your Unique Order Id !"
                android:textColor="#424242" />


            <TextView
                android:id="@+id/orderid"
                style="@style/headingfonts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/borderfile"
                android:gravity="center"
                android:text="H3433FDQ"
                android:textColor="@color/colorPrimaryDark" />


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
